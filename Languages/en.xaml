<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=System.Runtime">
    <!-- Main -->
    <sys:String x:Key="Loc_Main_Title">PrintMaster – Workflows</sys:String>
    <sys:String x:Key="Loc_Main_Header">PrintMaster</sys:String>
    <sys:String x:Key="Loc_Col_Active">On</sys:String>
    <sys:String x:Key="Loc_Col_Name">Name</sys:String>
    <sys:String x:Key="Loc_Col_Folder">Folder</sys:String>
    <sys:String x:Key="Loc_Col_Pattern">Pattern</sys:String>
    <sys:String x:Key="Loc_Col_Printer">Printer</sys:String>
    <sys:String x:Key="Loc_Btn_NewWorkflow">New workflow</sys:String>
    <sys:String x:Key="Loc_Btn_Edit">Edit</sys:String>
    <sys:String x:Key="Loc_Btn_Duplicate">Duplicate</sys:String>
    <sys:String x:Key="Loc_Btn_Delete">Delete</sys:String>
    <sys:String x:Key="Loc_Btn_Log">Log</sys:String>
    <sys:String x:Key="Loc_Btn_RefreshPrinters">Refresh printers</sys:String>
    <sys:String x:Key="Loc_Btn_Settings">Settings</sys:String>

    <!-- Settings -->
    <sys:String x:Key="Loc_Settings_Title">Settings</sys:String>
    <sys:String x:Key="Loc_Settings_General">General</sys:String>
    <sys:String x:Key="Loc_Settings_Autostart">Start with Windows (autostart)</sys:String>
    <sys:String x:Key="Loc_Settings_Language">Language:</sys:String>
    <sys:String x:Key="Loc_Settings_Ok">OK</sys:String>

    <sys:String x:Key="Loc_Theme_Light">Light</sys:String>
    <sys:String x:Key="Loc_Theme_Dark">Dark</sys:String>
    <sys:String x:Key="Loc_Theme_System">System (Windows)</sys:String>

    <sys:String x:Key="Loc_Lang_System">System (automatic)</sys:String>
    <sys:String x:Key="Loc_Lang_English">English</sys:String>
    <sys:String x:Key="Loc_Lang_German">German</sys:String>

    <!-- Log -->
    <sys:String x:Key="Loc_Log_Title">PrintMaster – Log</sys:String>
    <sys:String x:Key="Loc_Log_Header">Recent runs (success and failures)</sys:String>
    <sys:String x:Key="Loc_Log_Col_Time">Time</sys:String>
    <sys:String x:Key="Loc_Log_Col_Workflow">Workflow</sys:String>
    <sys:String x:Key="Loc_Log_Col_File">File</sys:String>
    <sys:String x:Key="Loc_Log_Col_Success">OK</sys:String>
    <sys:String x:Key="Loc_Log_Col_Message">Message</sys:String>

    <!-- Workflow editor -->
    <sys:String x:Key="Loc_We_Label_Name">Workflow name</sys:String>
    <sys:String x:Key="Loc_We_Check_Enabled">Workflow is enabled (watch + print)</sys:String>
    <sys:String x:Key="Loc_We_Hint_Dnd1">Drag a file into the pipeline → folder and filename are used. </sys:String>
    <sys:String x:Key="Loc_We_Hint_Dnd2">Replace the variable part with * (e.g. Invoice_*.pdf).</sys:String>
    <sys:String x:Key="Loc_We_Step1_Title">Watched folder</sys:String>
    <sys:String x:Key="Loc_We_Step1_Pick">Choose folder…</sys:String>
    <sys:String x:Key="Loc_We_Step2_Title">File pattern</sys:String>
    <sys:String x:Key="Loc_We_Step2_Hint">e.g. *.pdf or ^Invoice_\d+\.pdf$ – multiple patterns: one per line.</sys:String>
    <sys:String x:Key="Loc_We_Step2_Regex">Use regular expression (Regex)</sys:String>
    <sys:String x:Key="Loc_We_Step3_Title">Target printer</sys:String>
    <sys:String x:Key="Loc_We_Step4_Title">After processing</sys:String>
    <sys:String x:Key="Loc_We_Move_Target">Target folder:</sys:String>
    <sys:String x:Key="Loc_We_Rename_New">New filename:</sys:String>
    <sys:String x:Key="Loc_We_Delay_Label">Delay before processing (seconds):</sys:String>
    <sys:String x:Key="Loc_We_Delay_Hint">Watching is event-based: it triggers immediately when a file is created or renamed.</sys:String>
    <sys:String x:Key="Loc_We_Btn_Cancel">Cancel</sys:String>
    <sys:String x:Key="Loc_We_Btn_Save">Save</sys:String>

    <!-- Post actions -->
    <sys:String x:Key="Loc_Post_None">No action</sys:String>
    <sys:String x:Key="Loc_Post_Delete">Delete file</sys:String>
    <sys:String x:Key="Loc_Post_Move">Move to folder</sys:String>
    <sys:String x:Key="Loc_Post_Rename">Rename file</sys:String>

    <!-- Tray -->
    <sys:String x:Key="Loc_Tray_Tooltip">PrintMaster – Click to open</sys:String>
    <sys:String x:Key="Loc_Tray_Open">Open window</sys:String>
    <sys:String x:Key="Loc_Tray_Settings">Settings</sys:String>
    <sys:String x:Key="Loc_Tray_Log">Show log</sys:String>
    <sys:String x:Key="Loc_Tray_Exit">Exit</sys:String>
    <sys:String x:Key="Loc_Tray_MinTitle">PrintMaster</sys:String>
    <sys:String x:Key="Loc_Tray_MinText">Minimized to tray. Double-click to open.</sys:String>
    <sys:String x:Key="Loc_Tray_FailTitle">PrintMaster – Print error</sys:String>
    <sys:String x:Key="Loc_Tray_FailText">Workflow "{0}": print failed.\n{1}</sys:String>

    <!-- Messages -->
    <sys:String x:Key="Loc_Msg_SelectWorkflow">Please select a workflow.</sys:String>
    <sys:String x:Key="Loc_Msg_WorkflowEnabled">Workflow "{0}" enabled.</sys:String>
    <sys:String x:Key="Loc_Msg_WorkflowDisabled">Workflow "{0}" disabled.</sys:String>
    <sys:String x:Key="Loc_Msg_WorkflowCreated">Workflow "{0}" created. Please review and enable if needed.</sys:String>
    <sys:String x:Key="Loc_Msg_WorkflowAdded">Workflow "{0}" added.</sys:String>
    <sys:String x:Key="Loc_Msg_WorkflowUpdated">Workflow "{0}" updated.</sys:String>
    <sys:String x:Key="Loc_Msg_WorkflowDeleted">Workflow deleted.</sys:String>
    <sys:String x:Key="Loc_Msg_SaveFailed">Save failed: {0}</sys:String>
    <sys:String x:Key="Loc_CopyPrefix">Copy of </sys:String>

    <!-- Workflow editor validation -->
    <sys:String x:Key="Loc_We_Err_Name">Please enter a name.</sys:String>
    <sys:String x:Key="Loc_We_Err_Folder">Please choose a valid folder.</sys:String>
    <sys:String x:Key="Loc_We_Err_Printer">Please choose a printer.</sys:String>
    <sys:String x:Key="Loc_We_Err_MoveFolder">Please choose a valid target folder for "Move".</sys:String>
    <sys:String x:Key="Loc_We_Err_Rename">Please enter a new filename for "Rename".</sys:String>
    <sys:String x:Key="Loc_We_Dialog_PickWatch">Choose folder to watch</sys:String>
    <sys:String x:Key="Loc_We_Dialog_PickMove">Choose target folder to move to</sys:String>

    <!-- Test mode -->
    <sys:String x:Key="Loc_TestPrinterName">Test mode</sys:String>
    <sys:String x:Key="Loc_Test_Title">PrintMaster – Test mode</sys:String>
    <sys:String x:Key="Loc_Test_Body">The workflow was triggered.\n\nFile: {0}\n\nTest mode is still enabled.</sys:String>

    <!-- Backup -->
    <sys:String x:Key="Loc_Backup_Button_Create">Create backup</sys:String>
    <sys:String x:Key="Loc_Backup_Button_Restore">Restore backup</sys:String>
    <sys:String x:Key="Loc_Backup_Created">Backup created:\n{0}</sys:String>
    <sys:String x:Key="Loc_Backup_CreateFailed">Backup could not be created:\n{0}</sys:String>
    <sys:String x:Key="Loc_Backup_OpenDialogTitle">Select backup file</sys:String>
    <sys:String x:Key="Loc_Backup_Restored">Backup has been restored.\nPlease restart PrintMaster so all settings are applied.</sys:String>
    <sys:String x:Key="Loc_Backup_RestoreFailed">Backup could not be restored:\n{0}</sys:String>

    <!-- Pattern assistant -->
    <sys:String x:Key="Loc_PatternAssist_Title">Pattern assistant</sys:String>
    <sys:String x:Key="Loc_PatternAssist_Button">Pattern assistant…</sys:String>
    <sys:String x:Key="Loc_PatternAssist_NoResult">No useful common pattern could be found for the selected files.</sys:String>
    <sys:String x:Key="Loc_PatternAssist_Result">Suggested pattern:\n{0}</sys:String>
</ResourceDictionary>

