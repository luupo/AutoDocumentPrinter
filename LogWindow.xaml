<Window x:Class="PrintMaster.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PrintMaster â€“ Log"
        Height="400" Width="700"
        MinHeight="300" MinWidth="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Letzte Verarbeitungen (Erfolg und Fehler)" FontWeight="SemiBold" Margin="0,0,0,8"/>
        <DataGrid Grid.Row="1" x:Name="LogGrid" ItemsSource="{Binding Entries}"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                  RowHeight="28" BorderThickness="1" BorderBrush="#DDD">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Zeit" Binding="{Binding Time, StringFormat={}{0:HH:mm:ss}}" Width="70"/>
                <DataGridTextColumn Header="Workflow" Binding="{Binding WorkflowName}" Width="140"/>
                <DataGridTextColumn Header="Datei" Binding="{Binding FilePath}" Width="*" MinWidth="200"/>
                <DataGridTextColumn Header="Erfolg" Binding="{Binding Success}" Width="55"/>
                <DataGridTextColumn Header="Meldung" Binding="{Binding Message}" Width="*" MinWidth="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
