<Window x:Class="PrintMaster.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Loc_Log_Title}"
        Height="400" Width="700"
        MinHeight="300" MinWidth="500"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackground}">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{DynamicResource Loc_Log_Header}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimary}" Margin="0,0,0,8"/>
        <DataGrid Grid.Row="1" x:Name="LogGrid" ItemsSource="{Binding Entries}"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                  RowHeight="28" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}"
                  Background="{DynamicResource CardBackground}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{DynamicResource Loc_Log_Col_Time}" Binding="{Binding Time, StringFormat={}{0:HH:mm:ss}}" Width="70"/>
                <DataGridTextColumn Header="{DynamicResource Loc_Log_Col_Workflow}" Binding="{Binding WorkflowName}" Width="140"/>
                <DataGridTextColumn Header="{DynamicResource Loc_Log_Col_File}" Binding="{Binding FilePath}" Width="*" MinWidth="200"/>
                <DataGridTextColumn Header="{DynamicResource Loc_Log_Col_Success}" Binding="{Binding Success}" Width="55"/>
                <DataGridTextColumn Header="{DynamicResource Loc_Log_Col_Message}" Binding="{Binding Message}" Width="*" MinWidth="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
