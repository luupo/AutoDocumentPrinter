<Window x:Class="PrintMaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PrintMaster – Workflows"
        Height="480" Width="900"
        MinHeight="350" MinWidth="700"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Überschrift -->
        <TextBlock Grid.Row="0" Text="PrintMaster" FontSize="22" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,12"/>

        <!-- DataGrid: aktive Workflows -->
        <DataGrid Grid.Row="1" x:Name="WorkflowsGrid"
                  ItemsSource="{Binding Workflows}"
                  SelectedItem="{Binding SelectedWorkflow, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  SelectionMode="Single"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  RowHeight="32"
                  Margin="0,0,0,16"
                  BorderThickness="1" BorderBrush="#DDD"
                  Background="White"
                  MouseDoubleClick="WorkflowsGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="140"/>
                <DataGridTextColumn Header="Ordner" Binding="{Binding WatchPath}" Width="*" MinWidth="180"/>
                <DataGridTextColumn Header="Muster" Binding="{Binding FilePattern}" Width="120"/>
                <DataGridTextColumn Header="Drucker" Binding="{Binding PrinterName}" Width="160"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons + Status -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <Button x:Name="BtnNewWorkflow" Content="Neuer Workflow" Click="BtnNewWorkflow_Click" Margin="0,0,8,0"/>
                <Button x:Name="BtnEditWorkflow" Content="Bearbeiten" Click="BtnEditWorkflow_Click" Margin="0,0,8,0"/>
                <Button Content="Löschen" Command="{Binding DeleteWorkflowCommand}" Margin="0,0,8,0"/>
                <Button Content="Drucker aktualisieren" Command="{Binding RefreshPrintersCommand}"/>
            </StackPanel>
            <TextBlock Grid.Column="1" VerticalAlignment="Center" MaxWidth="320" TextTrimming="CharacterEllipsis"
                       Text="{Binding StatusMessage}" Foreground="#666" FontStyle="Italic"/>
        </Grid>
    </Grid>
</Window>
