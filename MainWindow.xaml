<Window x:Class="PrintMaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{DynamicResource Loc_Main_Title}"
        Height="480" Width="900"
        MinHeight="350" MinWidth="700"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackground}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Überschrift -->
        <TextBlock Grid.Row="0" Text="{DynamicResource Loc_Main_Header}" FontSize="22" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimary}" Margin="0,0,0,12"/>

        <!-- DataGrid: aktive Workflows -->
        <DataGrid Grid.Row="1" x:Name="WorkflowsGrid"
                  ItemsSource="{Binding Workflows}"
                  SelectedItem="{Binding SelectedWorkflow, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  SelectionMode="Single"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  RowHeight="32"
                  Margin="0,0,0,16"
                  BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}"
                  Background="{DynamicResource CardBackground}"
                  MouseDoubleClick="WorkflowsGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="{DynamicResource Loc_Col_Active}" Width="50" IsReadOnly="False">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsEnabled, Mode=OneWay}" HorizontalAlignment="Center"
                                      Click="WorkflowActive_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="{DynamicResource Loc_Col_Name}" Binding="{Binding Name}" Width="140" IsReadOnly="True"/>
                <DataGridTextColumn Header="{DynamicResource Loc_Col_Folder}" Binding="{Binding WatchPath}" Width="*" MinWidth="180" IsReadOnly="True"/>
                <DataGridTextColumn Header="{DynamicResource Loc_Col_Pattern}" Binding="{Binding FilePattern}" Width="120" IsReadOnly="True"/>
                <DataGridTextColumn Header="{DynamicResource Loc_Col_Printer}" Binding="{Binding PrinterName}" Width="160" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons + Status: Buttons haben Vorrang, Status nutzt Rest und kürzt mit ... -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" MinWidth="0"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <Button x:Name="BtnNewWorkflow" Content="{DynamicResource Loc_Btn_NewWorkflow}" Click="BtnNewWorkflow_Click" Margin="0,0,8,0"/>
                <Button x:Name="BtnEditWorkflow" Content="{DynamicResource Loc_Btn_Edit}" Click="BtnEditWorkflow_Click" Margin="0,0,8,0"/>
                <Button Content="{DynamicResource Loc_Btn_Duplicate}" Command="{Binding DuplicateWorkflowCommand}" Margin="0,0,8,0"/>
                <Button Content="{DynamicResource Loc_Btn_Delete}" Command="{Binding DeleteWorkflowCommand}" Margin="0,0,8,0"/>
                <Button x:Name="BtnLog" Content="{DynamicResource Loc_Btn_Log}" Click="BtnLog_Click" Margin="0,0,8,0"/>
                <Button Content="{DynamicResource Loc_Btn_RefreshPrinters}" Command="{Binding RefreshPrintersCommand}" Margin="0,0,8,0"/>
                <Button x:Name="BtnSettings" Content="{DynamicResource Loc_Btn_Settings}" Click="BtnSettings_Click"/>
            </StackPanel>
            <TextBlock Grid.Column="1" VerticalAlignment="Center" Margin="12,0,0,0" TextTrimming="CharacterEllipsis"
                       Text="{Binding StatusMessage}" Foreground="{DynamicResource TextMuted}" FontStyle="Italic"/>
        </Grid>
    </Grid>
</Window>
