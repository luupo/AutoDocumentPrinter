<Window x:Class="PrintMaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PrintMaster – Workflows"
        Height="560" Width="900"
        MinHeight="400" MinWidth="700"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Überschrift -->
        <TextBlock Grid.Row="0" Text="PrintMaster" FontSize="22" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,12"/>

        <!-- DataGrid: aktive Workflows -->
        <DataGrid Grid.Row="1" x:Name="WorkflowsGrid"
                  ItemsSource="{Binding Workflows}"
                  SelectedItem="{Binding SelectedWorkflow, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  SelectionMode="Single"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  RowHeight="32"
                  Margin="0,0,0,16"
                  BorderThickness="1" BorderBrush="#DDD"
                  Background="White">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="140"/>
                <DataGridTextColumn Header="Ordner" Binding="{Binding WatchPath}" Width="*" MinWidth="180"/>
                <DataGridTextColumn Header="Muster" Binding="{Binding FilePattern}" Width="120"/>
                <DataGridTextColumn Header="Drucker" Binding="{Binding PrinterName}" Width="160"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Formular: Neuer Workflow / Bearbeiten -->
        <GroupBox Grid.Row="2" Header="Workflow hinzufügen oder bearbeiten" Padding="12" Margin="0,0,0,8">
            <GroupBox.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="Margin" Value="0,0,8,0"/>
                </Style>
            </GroupBox.Resources>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding NewName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>

                <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" Margin="16,0,0,8">
                    <Button Content="Ordner wählen" Command="{Binding PickFolderCommand}"/>
                </StackPanel>

                <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding NewWatchPath, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Margin="0,0,0,8" Background="#EEE"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Dateimuster:"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding NewFilePattern, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,0"/>
                <TextBlock Grid.Row="1" Grid.Column="2" Text="Drucker:" Margin="16,0,8,0"/>
                <ComboBox Grid.Row="1" Grid.Column="3"
                          ItemsSource="{Binding InstalledPrinters}"
                          SelectedItem="{Binding NewPrinterName, Mode=TwoWay}"
                          IsEditable="False"/>
            </Grid>
        </GroupBox>

        <!-- Buttons + Status -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <Button Content="Hinzufügen" Command="{Binding AddWorkflowCommand}" Margin="0,0,8,0"/>
                <Button Content="Bearbeiten" Command="{Binding EditWorkflowCommand}" Margin="0,0,8,0"/>
                <Button Content="Löschen" Command="{Binding DeleteWorkflowCommand}" Margin="0,0,8,0"/>
                <Button Content="Drucker aktualisieren" Command="{Binding RefreshPrintersCommand}"/>
            </StackPanel>
            <TextBlock Grid.Column="1" VerticalAlignment="Center" MaxWidth="320" TextTrimming="CharacterEllipsis"
                       Text="{Binding StatusMessage}" Foreground="#666" FontStyle="Italic"/>
        </Grid>
    </Grid>
</Window>
