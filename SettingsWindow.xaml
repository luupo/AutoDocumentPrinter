<Window x:Class="PrintMaster.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Einstellungen"
        Height="200" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F8F9FA">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Allgemein" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16"/>
        <CheckBox Grid.Row="1" Content="Mit Windows starten (Autostart)" IsChecked="{Binding AutostartEnabled}"
                  VerticalAlignment="Top" FontSize="14"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="OK" Command="{Binding OkCommand}" IsDefault="True" Padding="24,8" MinWidth="80" Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
