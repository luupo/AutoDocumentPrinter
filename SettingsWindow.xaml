<Window x:Class="PrintMaster.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Loc_Settings_Title}"
        Height="290" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource WindowBackground}">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{DynamicResource Loc_Settings_General}" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimary}" Margin="0,0,0,16"/>
        <CheckBox Grid.Row="1" Content="{DynamicResource Loc_Settings_Autostart}" IsChecked="{Binding AutostartEnabled}"
                  VerticalAlignment="Top" FontSize="14"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,12,0,0">
            <TextBlock Text="{DynamicResource Loc_Settings_Language}" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimary}" Margin="0,0,8,0"/>
            <ComboBox ItemsSource="{Binding LanguageChoices}" SelectedValue="{Binding SelectedLanguage}"
                      SelectedValuePath="Value" MinWidth="160"
                      Background="{DynamicResource InputBackground}" Foreground="{DynamicResource TextPrimary}"
                      BorderBrush="{DynamicResource BorderBrush}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Display}" Foreground="{DynamicResource TextPrimary}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0">
            <Button Content="{DynamicResource Loc_Settings_Ok}" Command="{Binding OkCommand}" IsDefault="True" Padding="24,8" MinWidth="80" Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
