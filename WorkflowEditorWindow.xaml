<Window x:Class="PrintMaster.WorkflowEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:PrintMaster.Converters"
        Title="{Binding Title}"
        Height="520" Width="800"
        MinHeight="420" MinWidth="640"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Background="{DynamicResource WindowBackground}">
    <Window.Resources>
        <conv:StringToVisibilityConverter x:Key="StringToVisibility"/>
        <conv:IntConverter x:Key="IntConverter"/>
        <conv:EnumEqualsToVisibilityConverter x:Key="EnumEqualsToVisibility"/>
        <conv:PostActionDisplayConverter x:Key="PostActionDisplay"/>
    </Window.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Padding="24">
        <Grid MinWidth="560">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Name + Aktiv -->
            <StackPanel Grid.Row="0" Margin="0,0,0,16">
                <TextBlock Text="{DynamicResource Loc_We_Label_Name}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimary}" Margin="0,0,0,6"/>
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                         Padding="10,8" FontSize="14" MinWidth="200"
                         BorderBrush="{DynamicResource BorderBrush}" Background="{DynamicResource InputBackground}" Foreground="{DynamicResource TextPrimary}"
                         BorderThickness="1"/>
                <CheckBox Content="{DynamicResource Loc_We_Check_Enabled}" IsChecked="{Binding IsEnabled}"
                          Foreground="{DynamicResource TextPrimary}" Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Hinweis: Drag & Drop -->
            <TextBlock Grid.Row="1" Margin="0,0,0,6" FontSize="11" Foreground="{DynamicResource TextMuted}" TextWrapping="Wrap">
                <Run Text="{DynamicResource Loc_We_Hint_Dnd1}"/>
                <Run Text="{DynamicResource Loc_We_Hint_Dnd2}" FontWeight="SemiBold"/>
            </TextBlock>

            <!-- Pipeline: Ordner → Muster → Drucker → (optional) Nach Aktion (Drop-Ziel) -->
            <Border Grid.Row="2" x:Name="PipelineDropTarget" AllowDrop="True"
                    Background="{DynamicResource CardBackground}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                    CornerRadius="4" Padding="16" Margin="0,0,0,16"
                    DragOver="PipelineDropTarget_DragOver" Drop="PipelineDropTarget_Drop">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.06" Direction="270"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MinWidth="160"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" MinWidth="140"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" MinWidth="140"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" MinWidth="160"/>
                    </Grid.ColumnDefinitions>

                    <!-- Schritt 1 -->
                    <Border Grid.Column="0" Background="{DynamicResource Step1Background}" BorderBrush="{DynamicResource Step1Border}" BorderThickness="1"
                            CornerRadius="6" Padding="12" Margin="0,0,6,0" MinWidth="150">
                        <StackPanel>
                            <TextBlock Text="1" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource Step1Accent}" Margin="0,0,0,4"/>
                            <TextBlock Text="{DynamicResource Loc_We_Step1_Title}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimary}" Margin="0,0,0,6"/>
                            <TextBox Text="{Binding WatchPath, UpdateSourceTrigger=PropertyChanged}"
                                     IsReadOnly="True" Background="{DynamicResource InputBackground}" Foreground="{DynamicResource TextPrimary}" Padding="6,4" Margin="0,0,0,6"
                                     BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" MinHeight="28"/>
                            <Button Content="{DynamicResource Loc_We_Step1_Pick}" Command="{Binding PickFolderCommand}"
                                    Padding="8,5" HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Grid.Column="1" Text="→" FontSize="20" Foreground="{DynamicResource TextMuted}"
                               VerticalAlignment="Center" Margin="2,0"/>

                    <!-- Schritt 2 -->
                    <Border Grid.Column="2" Background="{DynamicResource Step2Background}" BorderBrush="{DynamicResource Step2Border}" BorderThickness="1"
                            CornerRadius="6" Padding="12" Margin="6,0" MinWidth="120">
                        <StackPanel>
                            <TextBlock Text="2" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource Step2Accent}" Margin="0,0,0,4"/>
                            <TextBlock Text="{DynamicResource Loc_We_Step2_Title}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimary}" Margin="0,0,0,6"/>
                            <TextBox Text="{Binding FilePattern, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="6,4" MinHeight="28" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" Background="{DynamicResource InputBackground}" Foreground="{DynamicResource TextPrimary}"/>
                            <TextBlock Text="{DynamicResource Loc_We_Step2_Hint}" FontSize="10" Foreground="{DynamicResource TextMuted}" Margin="0,4,0,0" TextWrapping="Wrap"/>
                            <CheckBox Content="{DynamicResource Loc_We_Step2_Regex}" IsChecked="{Binding UseRegexPattern}"
                                      Foreground="{DynamicResource TextPrimary}" Margin="0,6,0,0" FontSize="10"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Grid.Column="3" Text="→" FontSize="20" Foreground="{DynamicResource TextMuted}"
                               VerticalAlignment="Center" Margin="2,0"/>

                    <!-- Schritt 3 -->
                    <Border Grid.Column="4" Background="{DynamicResource Step3Background}" BorderBrush="{DynamicResource Step3Border}" BorderThickness="1"
                            CornerRadius="6" Padding="12" Margin="6,0" MinWidth="120">
                        <StackPanel>
                            <TextBlock Text="3" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource Step3Accent}" Margin="0,0,0,4"/>
                            <TextBlock Text="{DynamicResource Loc_We_Step3_Title}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimary}" Margin="0,0,0,6"/>
                            <ComboBox ItemsSource="{Binding InstalledPrinters}"
                                      SelectedItem="{Binding PrinterName, Mode=TwoWay}"
                                      Padding="6,4" MinHeight="28" IsEditable="False"
                                      BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" Background="{DynamicResource InputBackground}" Foreground="{DynamicResource TextPrimary}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" Foreground="{DynamicResource TextPrimary}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>
                    </Border>

                    <TextBlock Grid.Column="5" Text="→" FontSize="20" Foreground="{DynamicResource TextMuted}"
                               VerticalAlignment="Center" Margin="2,0"/>

                    <!-- Schritt 4 (optional): Nach der Verarbeitung -->
                    <Border Grid.Column="6" Background="{DynamicResource Step4Background}" BorderBrush="{DynamicResource Step4Border}" BorderThickness="1"
                            CornerRadius="6" Padding="12" Margin="6,0,0,0" MinWidth="150">
                        <StackPanel>
                            <TextBlock Text="4 (optional)" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource Step4Accent}" Margin="0,0,0,4"/>
                            <TextBlock Text="{DynamicResource Loc_We_Step4_Title}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimary}" Margin="0,0,0,6"/>
                            <ComboBox ItemsSource="{Binding PostActionTypes}" SelectedItem="{Binding PostAction, Mode=TwoWay}"
                                      Padding="6,4" MinHeight="28" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" Background="{DynamicResource InputBackground}" Foreground="{DynamicResource TextPrimary}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={StaticResource PostActionDisplay}}" Foreground="{DynamicResource TextPrimary}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <!-- Verschieben: Zielordner -->
                            <StackPanel Margin="0,8,0,0" Visibility="{Binding PostAction, Converter={StaticResource EnumEqualsToVisibility}, ConverterParameter=Move}">
                                <TextBlock Text="{DynamicResource Loc_We_Move_Target}" FontSize="11" Foreground="{DynamicResource TextSecondary}" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding MoveToPath, UpdateSourceTrigger=PropertyChanged}"
                                         IsReadOnly="True" Background="{DynamicResource InputBackground}" Foreground="{DynamicResource TextPrimary}" Padding="6,4" Margin="0,0,0,4"
                                         BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" MinHeight="28"/>
                                <Button Content="{DynamicResource Loc_We_Step1_Pick}" Command="{Binding PickMoveFolderCommand}"
                                        Padding="6,4" HorizontalAlignment="Stretch"/>
                            </StackPanel>
                            <!-- Umbenennen: Neuer Name -->
                            <StackPanel Margin="0,8,0,0" Visibility="{Binding PostAction, Converter={StaticResource EnumEqualsToVisibility}, ConverterParameter=Rename}">
                                <TextBlock Text="{DynamicResource Loc_We_Rename_New}" FontSize="11" Foreground="{DynamicResource TextSecondary}" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding RenameTo, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="6,4" MinHeight="28" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" Background="{DynamicResource InputBackground}" Foreground="{DynamicResource TextPrimary}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Wartezeit + Hinweis -->
            <StackPanel Grid.Row="3" Margin="0,0,0,12">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                    <TextBlock Text="{DynamicResource Loc_We_Delay_Label}" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimary}" Margin="0,0,8,0"/>
                    <TextBox Text="{Binding DelaySeconds, Converter={StaticResource IntConverter}, UpdateSourceTrigger=PropertyChanged}"
                             Width="60" Padding="6,4" VerticalContentAlignment="Center"
                             Background="{DynamicResource InputBackground}" Foreground="{DynamicResource TextPrimary}" BorderBrush="{DynamicResource BorderBrush}"/>
                </StackPanel>
                <TextBlock Text="{DynamicResource Loc_We_Delay_Hint}"
                           FontSize="11" Foreground="{DynamicResource TextMuted}" TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Fehlermeldung -->
            <TextBlock Grid.Row="4" Text="{Binding ErrorMessage}" Foreground="{DynamicResource ErrorBrush}" Margin="0,0,0,8"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibility}, FallbackValue=Collapsed}"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                <Button Content="{DynamicResource Loc_We_Btn_Cancel}" Command="{Binding CancelCommand}"
                        Padding="16,8" Margin="0,0,8,0" IsCancel="True" MinWidth="90"/>
                <Button Content="{DynamicResource Loc_We_Btn_Save}" Command="{Binding SaveCommand}"
                        Padding="16,8" IsDefault="True" MinWidth="90"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
